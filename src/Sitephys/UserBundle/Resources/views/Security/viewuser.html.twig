{% extends "SitephysUserBundle::layoutuser.html.twig" %}

{% block title %}
  Compte 
{% endblock %}

{% block sitephysuser_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;">Détails du compte de {{ userobject.username }} </h2>
{% endblock %}

{% block sitephysuser_image %}
<div class="containerthome">
    <img src="{{ asset('bundles/sitephysuser/images/fond-cosmo.jpg') }}" class="homephoto" alt="Image de élément" />
  </div>
{% endblock %}

{% block sitephysuser_body %}
  <div class="well">
    <section id="descriptions">
      Pseudo : {{ userobject.username }}  
      <br />Courriel : {{ userobject.email }}
      <br />Mot de passe : {{ userobject.password }}
      <br />Role : {{ userroles }} 
    </section>
  </div>
    <br />
  <div id="eval-th">
    <div class="button-eval">
      <a href="{{ path('sitephys_user_account') }}">Retour au compte</a>
    </div>
  </div>
{% endblock %}
