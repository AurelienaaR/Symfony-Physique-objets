{% extends "SitephysUserBundle::layoutuser.html.twig" %}

{% block title %}
  Inscription (nouveau compte)
{% endblock %}

{% block menu %}
  {{ parent() }}
{% endblock %}

{% block sitephysuser_image %}
  <div class="containertedit">
    <img src="{{ asset('bundles/sitephysuser/images/geo-photo.jpg') }}" class="addphoto" alt="Image de Ajout de compte Utilisateur" />
  </div>
{% endblock %}

{% block sitephysuser_section %}
  {% if (userroles == "author") %}
    <h2 style = "color:#FFF; text-align:center; margin:10px;">
      Inscription (nouveau compte Auteur)
    </h2>
    <h3 style = "color:#FFF; text-align:center; margin:10px;"><i>
      Pour ce compte, veuillez préciser, s'il vous plait, vos domaines d'intérêts (au moins 500 caractères) en sciences et pour lesquels vous souhaiteriez éventuellement apporter des modifications ou des ajouts en plus des fonctionalités des comptes Utilisateurs.</i>
    </h3>
  {% else %}
    <h2 style = "color:#FFF; text-align:center; margin:10px;">Inscription (nouveau compte Utilisateur)</h2>
  {% endif %}
{% endblock %}

{% block sitephysuser_body %}
  <br />
  {{ include("SitephysUserBundle:Security:formuseradd.html.twig") }}

{% endblock %}
