{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Lecture du thème ajouté {{ physaddtopic.title }} par {{ physaddtopic.username }}. 
{% endblock %}

{% block sitephysphysmvc_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;">Thème ajouté : {{ physaddtopic.title }} du domaine {{ domtopadded.title }}</h2>
{% endblock %}

{% block sitephysphysmvc_image %}
  <div class="containerthome">
    <img src="{{ asset('bundles/sitephysphysmvc/images/schemaphysmvcelement.png') }}" class="homephoto" alt="Image du thème ajouté" />
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
      <h2>Description du thème ajouté {{ physaddtopic.title }} du domaine {{ domtopadded.title }}</h2><br />

      <nav id="tabs-nav" class="clearfix">
        <a href="#contenuexpin">Exp in (1)</a><span>&nbsp;</span>
        <a href="#contenuth">Th (2)</a><span>&nbsp;</span>
        <a href="#contenuexpout">Exp out (3)</a><span>&nbsp;</span>
        <a href="#contenuretexpin">Return Exp in (4)</a><span>&nbsp;</span>
        <a href="#contenuretth">Return Th (5)</a><span>&nbsp;</span>
        <a href="#contenuretexpout">Return Exp out (6)</a><span>&nbsp;</span>
        <a href="#auteur">Création</a><span>&nbsp;</span>
      </nav>

      <div id="tabs-container" onload="initTab()">
        <article id="contenuexpin">
          Contenu de l'élément Exp in (1) :
          <br /> {{ physaddtopic.contentexpin }}
        </article>
        <article id="contenuth">
          Contenu de l'élément Th (2) :
          <br /> {{ physaddtopic.contentth }}
        </article>
        <article id="contenuexpout">
          Contenu de l'élément Exp out (3) :
          <br /> {{ physaddtopic.contentexpout }}
        </article>
        <article id="contenuretexpin">
          Contenu de l'élément Return Exp in (4) :
          <br /> {{ physaddtopic.contentretexpin }}
        </article>
        <article id="contenuretth">
          Contenu de l'élément Return Th (5) :
          <br /> {{ physaddtopic.contentretth }}
        </article>
        <article id="contenuretexpout">
          Contenu de l'élément Return Exp out (6) :
          <br /> {{ physaddtopic.contentretexpout }}
        </article>
        <article id="auteur">
          Auteur : {{ physaddtopic.username }}, 
          <br />Date : {{ physaddtopic.date|date('d/m/Y H:i:s') }}
          <br />Lien Internet : {{ physaddtopic.weblink }}
        </article>
      </div>

  </div>
{% endblock %}