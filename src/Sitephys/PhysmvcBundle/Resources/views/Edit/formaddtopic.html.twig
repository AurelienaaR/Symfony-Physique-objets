    <br /><br />
    <div> 
      <span>  {{ form_row(formphysaddtopic.weblink, {'attr': {'class': 'form-control'}}) }}  </span>
    </div>

    <br />
    <div>
      <span>  {{ form_row(formphysaddtopic.domainid, {'attr': {'class': 'form-control'}}) }}  </span>
    </div>

    <br /><br />
    {{ form_widget(formphysaddtopic.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_end(formphysaddtopic) }}

    <br />
  </div>
</div>
