<div class="wellform">

  <div class="form-group">
  
    <h3>Formulaire d'ajout du thème</h3>
    <br />

    {{ form_start(formphysaddtopic, {'attr': {'class': 'form'}}) }}
    {{ form_errors(formphysaddtopic) }}

    <div> 
      {{ form_row(formphysaddtopic.title, {'attr': {'class': 'form-control'}}) }} 
    </div>

    <br />
    <div> 
      {{ form_row(formphysaddtopic.username, {'attr': {'class': 'form-control'}}) }} 
    </div>

    <br />
    <div> 
      {{ form_row(formphysaddtopic.email, {'attr': {'class': 'form-control'}}) }} 
    </div>

    <br />
    <div> 
      {{ form_row(formphysaddtopic.date, {'attr': {'class': 'form-control'}}) }} 
    </div>

