{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Niveaux et symbolisations des éléments de physique 
{% endblock %}

{% block sitephysphysmvc_section %}
  <div id="hw">Niveaux et symbolisations</div>
{% endblock %}

{% block sitephysphysmvc_image %}
  <div id="containerimghome">
    <div class="containerthome">
	  <img src="{{ asset('bundles/sitephysphysmvc/images/schemaphysmvcelement.jpg') }}" class="homephoto" alt="Image de Symbolisations par niveaux de base" title="Schéma des niveaux de base" />
	</div>
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">

    <div id="hb">Description de niveaux et symbolisations par niveau de base et références par domaine</div><br />
      <nav id="tabs-nav" class="clearfix">
        {% for intBase in 1..6 %}
          <a href="{{ "#symbol" ~ intBase }}"> {{ datalevel[intBase - 1] }} </a><span>&nbsp;</span>
        {% endfor %}
        <a href="{{ "#reference" }}"> Références </a>
      </nav>

      <div id="tabs-container" onload="initTab()">
        {% for intBase in 1..6 %}
          <article id="{{ "symbol" ~ intBase }}" >
            <strong>Symbolisations pour chaque niveau de précision des éléments simples</strong> : 
            {% for intSub in 0..6 %}
              {% if bslevel[intBase][intSub] is defined %}
                <br /><br /><strong>Niveau {{ intBase }} - {{ intSub }}</strong> : {{ bslevel[intBase][intSub] }}
              {% endif %}
              {% if bssymb[intBase][intSub] is defined %}
                <br /><strong>Symbolisation</strong> : {{ bssymb[intBase][intSub] }} 
              {% endif %}
            {% endfor %}
          </article>
        {% endfor %}
        <article id="reference">
          <strong>Références pour le domaine du thème des éléments</strong> : 
          {% for titlerefdomx in titlerefdom %}
            <br /><br /><strong>Domaine</strong> : <strong>{{ titlerefdomx.dtitle }}</strong>
            <br /><strong>Référence</strong> : <strong>{{ titlerefdomx.rtitle }}</strong> 
            <br /><strong>Contenu</strong> : {{ titlerefdomx.rcontent }} 
          {% endfor %}
        </article>
      </div>

  </div>
{% endblock %}
