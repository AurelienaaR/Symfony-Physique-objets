{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Lecture de l'élément du thème et du niveau simple - {{ parent() }}
{% endblock %}

{% block sitephysphysmvc_section %}
  <h3 style = "color:#a4a1a1; text-align:center;"><i>Elément simple : {{ phystitle }}</i></h3>
{% endblock %}

{% block sitephysphysmvc_image %}
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    <section id="descriptions">
      <h2><i class="fa fa-gift"></i> Descriptions</h2>
      <nav id="tabs-nav" class="clearfix">
        <a href="#domaine">Domaine et thème</a>
        <a href="#niveau">Niveau</a>
        <a href="#contenu">Contenu</a>
        <a href="#evaluation">Evaluation</a>
        <a href="#symbolisation">Symbolisation</a>
        <a href="#author">Création</a>
      </nav>
      <div id="tabs-container" onload="initTab()">
        <article id="domaine">
          {{ phystitle }}
          <br />Domaine : {{ domaincontent }}
          <br />Thème : {{ topiccontent }} <br />
        </article>
        <article id="niveau">
          {{ phystitle }} 
          <br />Niveau : {{ physlevel }}, soit : 
          <br />Niveau de base <i>(global)</i> : {{ physleveltab[0] }} 
          <br />Niveau de précision <i>(élément)</i> : {{ physleveltab[1] }} 
          <br />Description du niveau : {{ levelcontent }} <br />
        </article>
        <article id="contenu">
          {{ phystitle }}
          <br /> {{ physcontent }} <br />
        </article>
        <article id="evaluation">
          {{ phystitle }} 
          <br />Evaluation : {{ physevaluation }} <br />
        </article>
        <article id="symbolisation">
          {{ phystitle }} <br />
          {% set cptsym = 0 %}
          {% for symcontent in symbolizationcontent %}
            {% set cptsym = cptsym + 1 %}
            Symbolisation {{ cptsym }} : {{ symcontent }} <br />
          {% endfor %}
        </article>
        <article id="author">
          {{ phystitle }} 
          <br />Par {{ physauthor }} , 
          <br />le {{ physdate|date('d/m/Y') }} <br />
        </article>
      </div>
      </section>
  </div>
{% endblock %}

{% block sitephysphysmvc_low %}
  <p>
    <a href="{{ path('sitephys_physmvc_home') }}" class="button">
      Retour à l'accueil
    </a>
    <a href="{{ path('sitephys_physmvc_topic') }}" class="button">
      Thèmes et domaines
    </a>
    <a href="{{ path('sitephys_physmvc_symbolization') }}" class="button">
      Niveaux et symbolisations
    </a>
  </p>
{% endblock %}