{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Modifier l'élément {{ physupdatetitle }}
{% endblock %}

{% block sitephysphysmvc_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;"><i>Suggestion de modification d'élément</i></h2>
{% endblock %}

{% block sitephysphysmvc_image %}
<div class="containerthome">
    <img src="{{ asset('bundles/sitephysphysmvc/images/fond-cosmo.jpg') }}" class="homephoto" alt="Image de Suggestion - Modification" />
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}

  <h3 style = "color:#268; text-align:center; margin:10px;"><i>Modifier l'élément {{ physupdatetitle }} du domaine {{ physupdatedomain }} de thème {{ physupdatetopic }} de niveau de base {{ physupdateleveltab[0] }} et de niveau de précision {{ physupdateleveltab[1] }}, soit : {{ physupdatelevelcontent }} à la date {{ 'now'|date('d/m/Y') }}.</h3>

<br />

  {{ include("SitephysPhysmvcBundle:Phys:formupdate.html.twig") }}

  <p>
    <a href="{{ path('sitephys_physmvc_edition') }}" class="btn btn-default">
      Accueil de l'édition
    </a>
  </p>

{% endblock %}
