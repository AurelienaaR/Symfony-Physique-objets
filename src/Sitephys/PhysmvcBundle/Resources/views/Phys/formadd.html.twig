<div class="wellform">

  {{ form_start(formphysadd, {'attr': {'class': 'form'}}) }}
  {{ form_errors(formphysadd) }}

  <div class="form-group">
  
    <h3>Formulaire d'ajout</h3>
    <br />

    <div> 
      {{ form_row(formphysadd.author, {'attr': {'class': 'form-control'}}) }} 
    </div>

    <br />
    <div>
      <span>  {{ form_row(formphysadd.date) }}  </span>
    </div>

    <br />
    <div>
      <span>  {{ form_row(formphysadd.content, {'attr': {'class': 'form-control'}}) }}  </span>
    </div>
    
    <br />
