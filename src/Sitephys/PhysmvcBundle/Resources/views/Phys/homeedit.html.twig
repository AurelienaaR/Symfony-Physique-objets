{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Suggestion d'édition d'élément
{% endblock %}

{% block sitephysphysmvc_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;"><i>Suggestion d'édition d'élément</i></h2>
{% endblock %}

{% block sitephysphysmvc_image %}
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    <h3>Propositions d'édition d'élément</h3>
    <nav id="tabs-nav" class="clearfix">
      <a href="#consult">Consultation</a>
      <a href="#modif">Modification</a>
      <a href="#add">Ajout</a>
    </nav>
    <div id="tabs-container" onload="initTab()">      
      <article id="consult">
        {% for idPossible in 0..cptedit %}
          <a href="{{ path('sitephys_physmvc_phys_view', {'id': physid[idPossible]}) }}">
          {{ physedit[idPossible] }} </a>
        {% endfor %}
      </article>
      <article id="modif">
        {% for idPossible in 0..cptedit %}
          <a href="{{ path('sitephys_physmvc_edition_update', {'id': physid[idPossible]}) }}">
          {{ physedit[idPossible] }} </a>
        {% endfor %}
      </article>
      <article id="add">
         {{ render(controller("SitephysPhysmvcBundle:Phys:add")) }}
      </article>
    </div>
  </div>
{% endblock %}
