{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Home des éléments 
{% endblock %}

{% block sitephysphysmvc_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;"><i>Accueil</i></h2>
{% endblock %}

{% block sitephysphysmvc_image %}
  <div id="containerimghome">
    <div class="containerthome">
      <img src="{{ asset('bundles/sitephysphysmvc/images/photoelectrohome.jpg') }}" class="homephoto" alt="Image de Home" />
    </div>
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    <h2><i class="fa fa-gift"></i>Liste des thèmes enregistrés pour chaque domaine</h2>
    <nav id="tabs-nav" class="clearfix">
      {% for tabdo in tabdom %}
        <a href="{{ "#dom" ~ tabdo[0] }}">{{ tabdo[1] }}</a><span> </span>
      {% endfor %}
      <a href="{{ "#lasttentop" }}">Dix derniers thèmes</a>
      <a href="{{ "#lasttwentyelt" }}">Vingt derniers éléments</a>
    </nav>
    <div id="tabs-container" onload="initTab()">
      {% for tabd in tabdom %}
        <article id="{{ "dom" ~ tabd[0] }}">
          {% for tabtoppdom in tabtopperdom[tabd[0]] %}
            <a href="{{ path('sitephys_physmvc_phys_hometopic', {'idTopic': tabtoppdom[0]}) }}"><div> {{ tabtoppdom[1] }} </div></a>
          {% endfor %}
        </article>
      {% endfor %}
      <article id="{{ "lasttentop" }}">
        {% for it in idtenlasttop %}
          <a href="{{ path('sitephys_physmvc_phys_hometopic', {'idTopic': it}) }}"><div> {{ titletop[it] }} </div></a>
        {% endfor %}
      </article>
      <article id="{{ "lasttwentyelt" }}">
        {% for ie in idtwentylastelt %}
          <a href="{{ path('sitephys_physmvc_phys_view', {'id': ie }) }}"><div> {{ titleelt[ie] }} </div></a>
        {% endfor %}
      </article>
    </div>
  </div>
{% endblock %}
