{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Home des éléments 
{% endblock %}

{% block sitephysphysmvc_image %}
  <div class="containerthome">
    <img src="{{ asset('bundles/sitephysphysmvc/images/photoelectrohome.jpg') }}" class="homephoto" alt="Image de Home" />
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    <section id="descriptions">
      <h2><i class="fa fa-gift"></i>Liste des thèmes enregistrés pour chaque domaine</h2>
      <nav id="tabs-nav" class="clearfix">
        {% for tabdo in tabdom %}
          <a href="{{ "#dom" ~ tabdo[0] }}"> {{ tabdo[1] }} </a>
        {% endfor %}
      </nav>
      <div id="tabs-container" onload="initTab()">
        {% for tabd in tabdom %}
          <article id="{{ "dom" ~ tabd[0] }}" >
            {% for tabtoppdom in tabtopperdom[tabd[0]] %}
              <a href="{{ path('sitephys_physmvc_phys_hometopic', {'idTopic': tabtoppdom[0]}) }}"><div> {{ tabtoppdom[1] }} </div></a>
            {% endfor %}
          </article>
        {% endfor %}
      </div>
    </section>
  </div>
{% endblock %}

{% block sitephysphysmvc_low %}
  <div>
    <p>
      <a href="{{ path('sitephys_physmvc_topic') }}" class="button">
        Thèmes et domaines
      </a>
      <a href="{{ path('sitephys_physmvc_symbolization') }}" class="button">
        Niveaux et symbolisations
      </a>
    </p>
  </div>
{% endblock %}
