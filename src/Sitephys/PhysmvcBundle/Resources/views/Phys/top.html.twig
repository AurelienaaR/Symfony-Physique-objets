{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Thèmes généraux en physique 
{% endblock %}

{% block sitephysphysmvc_section %}
  <h2 style = "color:#FFF; text-align:center; margin:10px;"><i>Thèmes généraux en physique</i></h2>
{% endblock %}

{% block sitephysphysmvc_image %}
  <div class="containertedit">
    <img src="{{ asset('bundles/sitephysphysmvc/images/physics-schema.jpg') }}" class="addphoto" alt="Image de thèmes" />
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    <h2>Descriptions et liens par domaine</h2><br />

    <nav id="tabs-nav" class="clearfix">
      {% for tti in iddomobject %}
        <a href="{{"#" ~ "domaintopic" ~ tti["id"] }}"> {{ tti["title"] }} </a><span>&nbsp;</span>
      {% endfor %}
    </nav>

    <div id="tabs-container" onload="initTab()">
      {% for tti in iddomobject %}
        {% set ttii = tti["id"] %}
        <article id={{ "domaintopic" ~ ttii }}>
          {% for ttid in listtopic[ttii] %}
            {{ ttid.content }} <br />
            <a href="{{ path('sitephys_physmvc_phys_hometopic', {'idTopic': ttid.id}) }}"> {{ ttid.title }} </a><br /> 
          {% endfor %}
        </article>
      {% endfor %}
    </div>

  </div>
{% endblock %}
