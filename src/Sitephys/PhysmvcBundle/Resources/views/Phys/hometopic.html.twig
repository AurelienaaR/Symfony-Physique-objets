{% extends "SitephysPhysmvcBundle::layout.html.twig" %}

{% block title %}
  Home des éléments du thème {{ toptitle }}
{% endblock %}

{% block sitephysphysmvc_section %}
  <h3 style = "color:#a4a1a1; text-align:center;"><i>Home des éléments du thème {{ toptitle }}</i></h3>
{% endblock %}

{% block sitephysphysmvc_image %}
  <div id="containertop">
  <p>
    {% for ib in [1,2,3,6,5,4] %}
      {% if tabboolbase[ib] %}
      <div>
        <a href="{{ path('sitephys_physmvc_phys_global', {'idTopic': idtop, 'intLevel': ib}) }}">
          <img src="{{ asset( 'bundles/sitephysphysmvc/images/schemaphysmvcglobal' ~ ib ~ '.png' ) }}" align="left" margin: "0" padding: "0" width="30%" alt="Schéma élément du modèle global" onmouseover="this.src='{{ '/bundles/sitephysphysmvc/images/schemaphysmvcglobalsombre' ~ ib ~ '.png' }}'" onmouseout="this.src='{{ '/bundles/sitephysphysmvc/images/schemaphysmvcglobal' ~ ib ~ '.png' }}'" />
        </a>
        </div>
      {% else %}
      <div>
        <img src="{{ asset( 'bundles/sitephysphysmvc/images/schemaphysmvcglobalclair' ~ ib ~ '.png' ) }}" align="left" margin: "0" padding: "0" width="30%" alt="Schéma élément non enregistré" />
        </div>
      {% endif %}
    {% endfor %}
    </p>
  </div>
{% endblock %}

{% block sitephysphysmvc_body %}
  <div class="well">
    {% for cp in range(0, cptMax - 1) %}
      {{ phystitle[cp] }}
      {{ levelcontent[cp] }}
      {{ physcontent[cp] }}{% if not loop.last %}, {% endif %}
      <i>Par {{ physauthor[cp] }}, le {{ physdate[cp]|date('d/m/Y') }}</i>
    {% endfor %}
  </div>
{% endblock %}

{% block sitephysphysmvc_low %}
  <p>
    <a href="{{ path('sitephys_physmvc_home') }}" class="button">
      Retour à l'accueil
    </a>
    <a href="{{ path('sitephys_physmvc_topic') }}" class="button">
      Thèmes et domaines
    </a>
    <a href="{{ path('sitephys_physmvc_symbolization') }}" class="button">
      Niveaux et symbolisations
    </a>
  </p>
{% endblock %}
